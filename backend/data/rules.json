{
    "version": "1.0.0",
    "groups": {
        "pe_critical": 100,
        "script_anomaly": 80,
        "pdf_exploit": 90,
        "general_suspicious": 30
    },
    "rules": [
        {
            "id": "R_PE_HIGH_ENTROPY",
            "target": [
                "pe",
                "unknown"
            ],
            "type": "entropy",
            "condition": "> 7.2",
            "weight": 40,
            "desc": "High entropy section likely packed/encrypted"
        },
        {
            "id": "R_PDF_OPENACTION",
            "target": [
                "pdf"
            ],
            "type": "dictionary",
            "match": [
                "/OpenAction",
                "/AA",
                "/JavaScript"
            ],
            "weight": 50,
            "desc": "PDF executes action on open"
        },
        {
            "id": "R_DOC_VBA_AUTORUN",
            "target": [
                "office"
            ],
            "type": "string",
            "match": [
                "AutoOpen",
                "AutoExec",
                "Document_Open"
            ],
            "weight": 60,
            "desc": "Office document with auto-run macro"
        },
        {
            "id": "R_SCRIPT_POWERSHELL_ENC",
            "target": [
                "script",
                "text"
            ],
            "type": "regex",
            "match": "powershell.*-e(nc)?\\s+[A-Za-z0-9+/=]{20,}",
            "weight": 90,
            "desc": "Powershell with encoded command detected"
        },
        {
            "id": "R_POLYGLOT_DETECTED",
            "target": [
                "image"
            ],
            "type": "bool",
            "feature": "is_polyglot",
            "weight": 85,
            "desc": "Image file contains appended executable code"
        }
    ]
}